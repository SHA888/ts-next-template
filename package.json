{
  "name": "ts-next-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "node --import tsx --no-warnings prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --config=jest.config.js --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --config=jest.config.js",
    "test:coverage": "NODE_ENV=test jest --coverage --config=jest.config.js",
    "test:db": "NODE_ENV=test jest --config=jest.config.js --detectOpenHandles --forceExit",
    "lint": "next lint && tsc --noEmit",
    "lint:fix": "next lint --fix && eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "prisma generate",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push --accept-data-loss",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:seed": "node -r esbuild-register prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:clean": "prisma migrate reset --force --skip-generate"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "14.1.4",
    "next-themes": "^0.4.6",
    "prisma": "^6.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.3",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^3.0.2",
    "browserify-zlib": "^0.2.0",
    "crypto-browserify": "^3.12.1",
    "cssnano": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "https-browserify": "^1.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.0",
    "postcss-assets": "^6.0.0",
    "postcss-custom-properties": "^14.0.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-nesting": "^13.0.2",
    "postcss-normalize": "^13.0.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.2",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,mdx,html,css,scss}": [
      "prettier --write"
    ]
  }
}
